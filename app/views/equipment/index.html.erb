    <h2>Armour Table</h2>
    <table class="warband_table">
        <tr>
            <th>Name</th>
            <th>Soak</th>
            <th>Agility Penalty</th>
            <th>Ability</th>
            <th>Cost</th>
        </tr>
        <% @armour.each do |a| %>
            <tr>
                <td><%= a.name %></td>
                <td><%= a.soak %></td>
                <td><%= a.agility_penalty %></td>
                <td><%= a.abilities %></td>
                <td><%= a.cost %></td>
            </tr>
        <% end %>
    </table>

<br>
    <h2>Ability Descriptions</h2>
<br>
    <table class="warband_table">
        <tr>
            <th>Name</th>
            <th>Effect</th>
        </tr>
    <% @abilities.each do |a| %>
        <tr>
            <td><%= a.name %></td>
            <td><%= a.effect %></td>
        </tr>
    <% end %>
    
    </table>

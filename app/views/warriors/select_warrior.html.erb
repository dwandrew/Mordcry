
<%= form_for @warband do |f| %>




<% selection = warrior_categories %>

  <div class='info_box'>
  <h2>Warband Name: <%= @warband.name %></h2>
  <h3>Gold:</h3>
  <%= @warband.gold_crowns %><br>
  <h3>Wyrdstone Shards</h3>
  <%= @warband.wyrdstone_shards %>
  </div>


<h2>Heroes</h2>
<table class="warband_table">
<tr>
  <th>Type</th>
  <th>Starting Exp</th>
  <th>Move</th>
  <th>Strength</th>
  <th>Toughness</th>
  <th>Agility</th>
  <th>Wounds</th>
  <th>Bravery</th>
  <th>Skills</th>
  <th>Max Number in Warband</th>
  <th>Cost</th>
  <th>Add Warrior to Warband</th>
</tr>


<% selection.each do |w| %>
<% x = which_stats(w) %> 
<% x.save %>
<% if x.is_hero %>
  <tr>
    <td><%= x.warrior_type %> </td>
    <td><%= x.exp %> </td>
    <td><%= x.move %> </td>
    <td><%= x.strength %> </td>
    <td><%= x.toughness %> </td>
    <td><%= x.agility %> </td>
    <td><%= x.wounds %> </td>
    <td><%= x.bravery %> </td>
    <td><% x.skill.each do |s| %>
    <%=link_to s.name, skill_path(s) %><br>
    <%end%>
     </td>
    <td><%= x.number %> </td>
    <td><%= x.cost %> </td>

    <td><%= link_to "Add to Warband", warbands_add_to_warband_path(warrior:{
            warband_id: @warband,
            warrior_type: x.warrior_type,
            exp: x.exp,
            move: x.move,
            strength: x.strength,
            toughness: x.toughness,
            agility: x.agility,
            wounds: x.wounds,
            bravery: x.bravery,
            skills: x.skill.map {|s| s.name},
            number: x.number,
            warband_type: @warband.warband_type,
            is_hero: x.is_hero,
            cost: x.cost,
    }), :method => :post %> </td>
  </tr>
<% end %>
<% end %>
</table>

<h2>Henchmen</h2>
<table class="warband_table">
  <tr>
    <th>Type</th>
    <th>Starting Exp</th>
    <th>Move</th>
    <th>Strength</th>
    <th>Toughness</th>
    <th>Agility</th>
    <th>Wounds</th>
    <th>Bravery</th>
    <th>Skills</th>
    <th>Max Number in Warband</th>
    <th>Cost</th>
    <th>Add Warrior to Warband</th>
  </tr>
<% selection.each do |w| %>
<% x = which_stats(w) %> 
<% if !x.is_hero %> 
  <tr>
    <td><%= x.warrior_type %> </td>
    <td><%= x.exp %> </td>
    <td><%= x.move %> </td>
    <td><%= x.strength %> </td>
    <td><%= x.toughness %> </td>
    <td><%= x.agility %> </td>
    <td><%= x.wounds %> </td>
    <td><%= x.bravery %> </td>
    <td><% x.skill.each do |s| %>
    <%=link_to s.name, skill_path(s) %><br>
    <%end%>
     </td>
    <td><%= x.number %> </td>
    <td><%= x.cost %> </td>
    <td><%= link_to "Add to Warband", warbands_add_to_warband_path(warrior:{
            warband_id: @warband,
            warrior_type: x.warrior_type,
            exp: x.exp,
            move: x.move,
            strength: x.strength,
            toughness: x.toughness,
            skills: x.skill.map {|s| s.name},
            agility: x.agility,
            wounds: x.wounds,
            bravery: x.bravery,
            number: x.number,
            warband_type: @warband.warband_type,
            is_hero: x.is_hero,
            cost: x.cost,
            }), :method => :post %> </td>
  </tr>
  <% end %>
<% end %>
</table>

  <%= f.submit class: "home_link"%>
<% end %>

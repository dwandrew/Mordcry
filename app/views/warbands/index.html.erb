<style> 
    body {
    column-count: 3;
    column-fill: balanced;
    }
    div{
        break-inside: avoid-column;
    } 
</style>

<%  if @warbands == [] %>
<div class="warband_box">
<h1>No Current Warbands on record</h1>
</div>
<% else %>

<div class='search_box'>
<table class='search_table'>
    <tr>
        <%= form_tag warbands_path, method:'get' do %>
        <td><h4><%= label_tag (:warband), "Enter Type of Warband:"%></h4></td>
        <td><%= text_field_tag :warband, params[:warband], placeholder:"Enter type"%></td>
        <td><%= submit_tag("Search", name: nil, class:'home_link') %></td>
    
<% end %>
    
        <%= form_tag warbands_path, method:'get' do %>
        <td><h4><%= label_tag (:rating), "Enter Rating of warband:"%></h4></td>
        <td><%= text_field_tag :rating, params[:rating], placeholder:"Enter Rating"%></td>
        <td><%= submit_tag("Search", name: nil, class:'home_link') %></td>
    <% end %>
    </tr>
</table>
</div>

<% @warbands.each do |w| %>
<div class="warband_box">
<h4> Warband Name: <%= w.name %></h4>
Type: <%= w.warband_type %><br>
<% rating_calc(w) %> 
Warband Rating: <%= rating_calc(w) %><br>
Gold: <%= w.gold_crowns %><br>
Wrydstone: <%= shards(w) %><br>
<%= link_to "Show Warband", warband_path(w) %>
</div>
<br>
<% end %>

<% end %>
